<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bom_wizard" model="ir.ui.view">
        <field name="name">bom.reject.wizard.form</field>
        <field name="model">bom.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject BOM">
                <group>
                    <field name="bom_id" readonly="1"/>
                    <field name="reject_reason"/>
                </group>
                <footer>
                    <button string="Confirm Rejection" type="object" name="action_confirm_reject" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
