<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- inherit view add cost field in bom line -->
    <record id="mrp_production_form_view_inherited" model="ir.ui.view">
        <field name="name">mrp.production.form.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_mark_done']" position="attributes">
                <attribute name="invisible">not move_raw_ids or not show_produce_all or components_availability_state != 'available'</attribute>
            </xpath>
        </field>
    </record>
</odoo>
