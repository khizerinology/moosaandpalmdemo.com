<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_vendor_category" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.vendor.category</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="after">
                <field name="vendor_category_id"/>
            </xpath>
        </field>
    </record>



    <!-- Tree View -->
    <record id="view_vendor_category_tree" model="ir.ui.view">
        <field name="name">vendor.category.tree</field>
        <field name="model">vendor.category</field>
        <field name="arch" type="xml">
            <list string="Vendor Categories">
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vendor_category_form" model="ir.ui.view">
        <field name="name">vendor.category.form</field>
        <field name="model">vendor.category</field>
        <field name="arch" type="xml">
            <form string="Vendor Category">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <menuitem id="vendor_category_menu_root" name="Vendor Categories" sequence="100"/>
    <record id="vendor_category_action" model="ir.actions.act_window">
        <field name="name">Vendor Categories</field>
        <field name="res_model">vendor.category</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="vendor_category_menu" name="Vendor Categories"
              parent="vendor_category_menu_root"
              action="vendor_category_action"/>





</odoo>
